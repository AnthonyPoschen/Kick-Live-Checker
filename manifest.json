{
  "manifest_version": 3,
  "name": "Kick.com Live Checker",
  "version": "1.0",
  "description": "Check if followed Kick.com users are live",
  "permissions": ["cookies", "storage", "tabs", "notifications", "alarms"],
  "host_permissions": ["https://kick.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
